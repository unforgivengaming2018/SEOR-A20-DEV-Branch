<SEOR>
<!-- This modlet is designed to bring realistic weather to 7 days And make the wasteland area Radiated -->
<!-- A big shoutout to Max fox Gaming for His help on this modlet -->
<!-- This sets Snow biome to always have snowstorms And always is cold -->
<set xpath="//biome[@name='snow']/weather">
	<Temperature min="-60" max="50" prob="1"/>
	<Fog min="0" max="100" prob=".9"/>
	<Fog min="100" max="100" prob="1.5"/>
	<CloudThickness min="0" max="100" prob=".5"/>
	<CloudThickness min="95" max="100" prob="1.5"/>
	<Precipitation min="0" max="0" prob=".0"/> <!-- it has to be at least 70% cloudy before it can rain -->
	<Precipitation min="50" max="100" prob=".75"/>
	<Wind min="20" max="40" prob="1"/>
	<Wind min="40" max="100" prob="1.9"/>
	<ParticleEffect prefab="ParticleEffects/p_snowstorm1" ChunkMargin="7"/>
</set>
<!--This sets Weather in The wasteland biome to randomize the weather it gets -->
<set xpath="//biome[@name='wasteland']/weather">
	<Temperature min="60" max="120" prob="1"/>
	<Fog min="0" max="0" prob=".9"/>
	<Fog min="100" max="100" prob="1"/>
	<CloudThickness min="0" max="100" prob="1"/>
	<CloudThickness min="95" max="100" prob=".5"/>
	<Precipitation min="0" max="0" prob=".0"/> <!-- it has to be at least 70% cloudy before it can rain -->
	<Precipitation min="50" max="100" prob="1.75"/>
	<Wind min="20" max="40" prob="1.9"/>
	<Wind min="40" max="100" prob="2"/>
	<ParticleEffect prefab="ParticleEffects/p_smokestorm" ChunkMargin="7"/>
</set>
<!-- This sets Weather in the Pine Forest Biome -->
<set xpath="//biome[@name='pine_forest']/weather">
	<Temperature min="-35" max="15" prob="1"/>
	<Fog min="0" max="100" prob="1.9"/>
	<Fog min="100" max="100" prob="1.5"/>
	<CloudThickness min="0" max="100" prob="1.5"/>
	<CloudThickness min="95" max="100" prob="1.5"/>
	<Precipitation min="0" max="0" prob="0"/> <!-- it has to be at least 70% cloudy before it can rain -->
	<Precipitation min="50" max="100" prob="1.75"/>
	<Wind min="20" max="40" prob="1"/>
	<Wind min="40" max="100" prob="1.9"/>
</set>
<!-- This sets Weather in the Desert biome to make it hot Like a real desert -->
<set xpath="//biome[@name='desert']/weather">
	<Temperature min="90" max="120" prob="2"/>
	<Fog min="0" max="100" prob=".9"/>
	<Fog min="100" max="100" prob=".5"/>
	<CloudThickness min="0" max="100" prob="0"/>
	<CloudThickness min="95" max="100" prob=".5"/>
	<Precipitation min="0" max="0" prob="0"/> <!-- it has to be at least 70% cloudy 	before it can rain -->
	<Precipitation min="50" max="100" prob="1.75"/>
	<Wind min="20" max="40" prob="1"/>
	<Wind min="40" max="100" prob="1.9"/>
	<ParticleEffect prefab="ParticleEffects/p_sandstorm" ChunkMargin="7"/>
</set>

<!-- This is the general weather settings for each biome -->
<set xpath="/worldgeneration/weather">
    <property class="Foggy">
		<property name="Spectrum" value="foggy"/>
		<property name="Temperature" value="-5"/>
		<property name="AmbientSound" value="..."/>
		<property name="ParticleEffect" value="..."/>
    </property>
    <property class="Rainy">
		<property name="Spectrum" value="rainy"/>
		<property name="Temperature" value="-10"/>
		<property name="AmbientSound" value="..."/>
		<property name="ParticleEffect" value="..."/>
    </property>
</set>

</SEOR>