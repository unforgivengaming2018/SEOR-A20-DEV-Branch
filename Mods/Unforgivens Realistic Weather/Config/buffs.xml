<SEOR>
	<insertAfter xpath="//buff[@name='buffStatusCheck01']/effect_group[last()]">
		<effect_group>
			<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" target="self" buff="buffRadiation">
				<requirement name="InBiome" biome="8"/>
				-<requirement name="NotHasBuff" buff="buffHazmatComplete"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" target="self" buff="buffRadiation">
				<requirement name="!InBiome" biome="8" />
			</triggered_effect>
			
			<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" target="self" buff="buffRadiation03">
				<requirement name="HasBuff" buff="buffHazmatComplete" />
			</triggered_effect>
			
		</effect_group>
	</insertAfter>
	
	<append xpath="/buffs">
		<buff name="buffRadiation" name_key="buffRadiationName" description_key="buffRadiationDesc" tooltip_key="buffRadiationTooltip" icon="ui_game_symbol_radiation" icon_color="0,76,85" icon_blink="true">
			<damage_type value="radiation"/>
			<stack_type value="ignore"/>
			<update_rate value="1"/>
			<effect_group>
				<passive_effect name="HealthChangeOT" operation="base_subtract" value="10"/>

				<!-- -->
				<triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect" intensity="1" fade=".7" effect_name="Hot"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect" intensity="0" fade="1" effect_name="Hot"/>
				
				<!-- -->
				<triggered_effect trigger="onSelfBuffStart" action="ModifyScreenEffect" effect_name="Radiation" intensity="1.0" fade="2"/>
				<triggered_effect trigger="onSelfBuffRemove" action="ModifyScreenEffect" effect_name="Radiation" intensity="0" fade="2"/>
				
				<!-- Removes screen effect on death -->
				<triggered_effect trigger="onSelfDied" action="ModifyScreenEffect" effect_name="Radiation" intensity="0" fade="0"/>
				<triggered_effect trigger="onSelfDied" action="ModifyScreenEffect" effect_name="Hot" intensity="0" fade="0"/>
			</effect_group>
		</buff>
	</append>
	
</SEOR>
