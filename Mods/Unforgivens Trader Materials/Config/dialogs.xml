			<quest_entry id="quest_MaterialTrader2_ironBars" />
			<quest_entry id="quest_MaterialTrader2_ironBarsCentered" />
			<response_entry id="nevermind" />
		</statement>
		<!-- 500 -->
		<statement id="500_blocks" text="dialog_trader_statement_type_blocks" nextstatementid="start" >
			<quest_entry id="quest_MaterialTrader3_FlagstoneBlock" />
