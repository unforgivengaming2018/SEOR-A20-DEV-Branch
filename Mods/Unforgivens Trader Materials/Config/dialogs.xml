		<statement id="1000_blocks" text="dialog_trader_statement_type_blocks" nextstatementid="start" >
			<quest_entry id="quest_MaterialTrader4_FlagstoneBlock" />
			<quest_entry id="quest_MaterialTrader4_rebarFrameBlock" />
			<response_entry id="nevermind" />
		</statement>
		<statement id="1000_materials" text="dialog_trader_statement_type_materials" nextstatementid="start" >
			<quest_entry id="quest_MaterialTrader4_Cobblestone" />
			<quest_entry id="quest_MaterialTrader4_ConcreteMix" />
			<quest_entry id="quest_MaterialTrader4_Cement" />
			<quest_entry id="quest_MaterialTrader4_resourceForgedIron" />
