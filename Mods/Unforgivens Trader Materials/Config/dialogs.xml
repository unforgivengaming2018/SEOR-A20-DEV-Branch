	<!-- Responses -->
	<insertAfter xpath="/dialogs/dialog[@id='trader']/response[@id='specialjobshave']">
		<response id="materialTrades" text="dialog_trader_response_materialTrades" nextstatementid="materialTrades" />
		<response id="trade_blocks" text="dialog_trader_response_trade_blocks" nextstatementid="trade_blocks" />
